@model InternetShopCore.Models.SmartPhoneProduct

<h4>SmartPhoneProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="_SmartPhoneProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdId" class="control-label"></label>
                <select asp-for="ProdId" class ="form-control" asp-items="ViewBag.ProdId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OperationSystem" class="control-label"></label>
                <input asp-for="OperationSystem" class="form-control" />
                <span asp-validation-for="OperationSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyProtect" class="control-label"></label>
                <input asp-for="BodyProtect" class="form-control" />
                <span asp-validation-for="BodyProtect" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DualSimSupport" /> @Html.DisplayNameFor(model => model.DualSimSupport)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CoreCount" class="control-label"></label>
                <input asp-for="CoreCount" class="form-control" />
                <span asp-validation-for="CoreCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPU_Frequency" class="control-label"></label>
                <input asp-for="CPU_Frequency" class="form-control" />
                <span asp-validation-for="CPU_Frequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RAM_Size" class="control-label"></label>
                <input asp-for="RAM_Size" class="form-control" />
                <span asp-validation-for="RAM_Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemorySize" class="control-label"></label>
                <input asp-for="MemorySize" class="form-control" />
                <span asp-validation-for="MemorySize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenSize" class="control-label"></label>
                <input asp-for="ScreenSize" class="form-control" />
                <span asp-validation-for="ScreenSize" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WorkIn4G" /> @Html.DisplayNameFor(model => model.WorkIn4G)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CameraResolution" class="control-label"></label>
                <input asp-for="CameraResolution" class="form-control" />
                <span asp-validation-for="CameraResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BatteryCapacity" class="control-label"></label>
                <input asp-for="BatteryCapacity" class="form-control" />
                <span asp-validation-for="BatteryCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

