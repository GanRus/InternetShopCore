@model IEnumerable<InternetShopCore.Models.Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Категории";
}

<h4>Категории</h4>
<hr />
@if (TempData["success"] != null)
{
    <p class="text-success">@TempData["success"].ToString()</p>
}

@if (TempData["error"] != null)
{
    <p class="text-danger">@TempData["error"].ToString()</p>
}
<p>
    <a asp-action="AddCategory">Добавить категорию</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupCategory.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.CategoryId">Редактировать</a> |
                    <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId"
                       onclick="return confirm('Вы уверены что хотите удалить выбранную категорию?')">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Назад к списку</a>
</div>