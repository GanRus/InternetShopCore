@model InternetShopCore.Models.GroupCategory
@{
    ViewData["Title"] = "Редактирование группы категорий";
}

<h4>Редактирование группы категорий</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGroupCategory" asp-route-id="@Model.GroupCategoryId">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="GroupCategoryId" type="hidden" />
                <input type="submit" value="Обновить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GroupCategories">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}