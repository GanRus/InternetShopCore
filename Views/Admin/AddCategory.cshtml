@model InternetShopCore.Models.Category

@{
    ViewData["Title"] = "Добавить категорию товара";
}

<h4>Добавить категорию товара</h4>
<hr />

@if (TempData["success"] != null)
{
    <span class="text-success">@TempData["success"].ToString()</span>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupCategoryId" class="control-label"></label>
                <select asp-for="GroupCategoryId" asp-items="ViewBag.GroupCategoryList" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="GroupCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}